# Brewfile for macOS
# brew bundle --file=./Brewfile-macOS

cask_args appdir: "~/Applications", require_sha: true

tap 'koekeishiya/formulae'
tap 'teamookla/speedtest'

# Binaries
brew 'koekeishiya/formulae/yabai' # A tiling window manager for macOS
brew 'koekeishiya/formulae/skhd' # Simple hotkey daemon for macOS
brew 'speedtest'
brew 'terminal-notifier' # Send macOS User Notifications from the command-line

# Apps
cask 'stats' # menu stats
cask 'wezterm'
cask 'orbstack'
cask 'raycast'
cask 'appcleaner'
cask 'karabiner-elements'
